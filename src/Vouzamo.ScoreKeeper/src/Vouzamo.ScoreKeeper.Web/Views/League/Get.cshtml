@model League

@inject DataContext DataContext

@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Name</h2>
        <ul>
            @foreach (var season in DataContext.List<Season>().Where(x => x.LeagueId == Model.Id))
            {
                <li>@season.Name</li>
            }
        </ul>
    </div>
</div>